<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="utf-8">
<title>Events</title>

<% include global/head %>

<!-- HTML5 shim, for IE6-8 support of HTML5 elements -->
<!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

</head>
<body>

	<!-- start header -->
  <% include global/header %>
  <!-- end header -->
	<section id="inner-headline">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<h2 class="pageTitle">Events</h2>
			</div>
		</div>
	</div>
	</section>
	<section id="content">

	<div class="container">


		<div class="row">
			<div class="[ col-xs-12 col-sm-offset-2 col-sm-8 ]">
				<ul class="event-list">

          <% if(locals.events){ %>

            <% for (var i=0; i < events.length; i++){ %>

          <li>
						<time>
							<span class="day"><%- events[i].day %></span>
							<span class="month"><%- events[i].month.substring(0,3) %></span>
							<span class="year"><%- events[i].year %></span>
						</time>
						<img alt="<%- events[i].name %>" src="images/events/<%- events[i].name.toLowerCase().replace(/ /g,"") %>.jpg" />
						<div class="info">
							<h2 class="title"><%= events[i].name %></h2>
							<p class="desc"><%- events[i].blurb %></p>
						</div>
					</li>

          <% }} %>


				</ul>
			</div>
		</div>


				</div>
	</section>
  <% include global/footer %>

</div>

<!-- javascript
    ================================================== -->
<!-- Placed at the end of the document so the pages load faster -->
<% include global/foot %>
</body>
</html>
